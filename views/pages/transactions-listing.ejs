                <div id="selectedWalletContainer">
                    <div class="wallet-container">
                        <img class="wallet-icon" src="/images/wallet.png" alt="Ícone da carteira">
                        <div class="wallet-info">
                            <span id="toolbarWalletName"><%= wallet.name %><i class="material-icons change-wallet-icon">arrow_drop_down</i></span>
                            <span id="toolbarWalletBalance">
                                <strong><%= wallet.actualBalance %></strong>
                            </span>
                        </div>
                    </div>
                </div>

                <% } %>
            </div>

            <div id="rightSide">
                <% if ( selectedWallet > 0 ) { %>
                <div class="commands-container" id="commandsContainer">
                    <span class="material-icons">calendar_month</span>
                    <span class="material-icons search-icon">search</span>

                    <button class="btn btn-cl-green" id="menuBtnAddTransaction">
                        <span class="btn-caption">ADICIONAR TRANSAÇÃO</span>
                        <span class="btn-icon material-icons">add</span>
                    </button>
                </div>
                <% } %>
            </div>
        </header>

